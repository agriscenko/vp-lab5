<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:Lab5.MAUI.ViewModels"
             x:Class="Lab5.MAUI.EmployeesPage"
             Title="Employees">

    <ContentPage.BindingContext>
        <viewModels:EmployeesPageViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <StackLayout IsVisible="{Binding IsReadOnly}" Spacing="10" Padding="10">
                <Label 
                    Text="{Binding Department.Code}"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    Margin="0,5" />

                <Label 
                    Text="{Binding Department.Name}"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    Margin="0,5" />

                <Label 
                    Text="{Binding Department.FloorNumber}"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    Margin="0,5" />

                <Label 
                    Text="{Binding Department.PhoneNumber}"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    Margin="0,5" />

                <Label 
                    Text="{Binding Department.Email}"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center"
                    Margin="0,5" />
            </StackLayout>

            <StackLayout IsVisible="{Binding IsEditEnabled}" Spacing="15" Padding="10">
                <Label 
                    Text="Code"
                    VerticalOptions="Center" 
                    HorizontalOptions="Start"
                    Margin="0,0,0,5" />

                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                    <Entry Text="{Binding Department.Code, Mode=TwoWay}"
                           Grid.Column="0" />
                    <BoxView BackgroundColor="Red"
                             WidthRequest="10"
                             HeightRequest="10"
                             VerticalOptions="Center"
                             IsVisible="{Binding IsCodeInvalid}"
                             Grid.Column="1" />
                </Grid>

                <Label 
                    Text="Name"
                    VerticalOptions="Center" 
                    HorizontalOptions="Start"
                    Margin="0,10,0,5" />

                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                    <Entry Text="{Binding Department.Name, Mode=TwoWay}"
                           Grid.Column="0" />
                    <BoxView BackgroundColor="Red"
                             WidthRequest="10"
                             HeightRequest="10"
                             VerticalOptions="Center"
                             IsVisible="{Binding IsNameInvalid}"
                             Grid.Column="1" />
                </Grid>

                <Label
                    Text="Floor number"
                    VerticalOptions="Center" 
                    HorizontalOptions="Start"
                    Margin="0,10,0,5" />

                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                    <Entry Text="{Binding Department.FloorNumber, Mode=TwoWay}"
                           Grid.Column="0" />
                    <BoxView BackgroundColor="Red"
                             WidthRequest="10"
                             HeightRequest="10"
                             VerticalOptions="Center"
                             IsVisible="{Binding IsFloorNumberInvalid}"
                             Grid.Column="1" />
                </Grid>

                <Label
                    Text="Phone number"
                    VerticalOptions="Center" 
                    HorizontalOptions="Start"
                    Margin="0,10,0,5" />

                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                    <Entry Text="{Binding Department.PhoneNumber, Mode=TwoWay}"
                           Grid.Column="0" />
                    <BoxView BackgroundColor="Red"
                             WidthRequest="10"
                             HeightRequest="10"
                             VerticalOptions="Center"
                             IsVisible="{Binding IsPhoneNumberInvalid}"
                             Grid.Column="1" />
                </Grid>

                <Label
                    Text="Email"
                    VerticalOptions="Center" 
                    HorizontalOptions="Start"
                    Margin="0,10,0,5" />

                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                    <Entry Text="{Binding Department.Email, Mode=TwoWay}"
                           Grid.Column="0" />
                    <BoxView BackgroundColor="Red"
                             WidthRequest="10"
                             HeightRequest="10"
                             VerticalOptions="Center"
                             IsVisible="{Binding IsEmailInvalid}"
                             Grid.Column="1" />
                </Grid>
                
                <StackLayout Orientation="Horizontal" 
                             Spacing="15" 
                             Margin="0,20,0,0"
                             HorizontalOptions="Center">
                    <Button Text="Ok" 
                            Command="{Binding UpdateConfirmCommand}"
                            Padding="20,10"
                            Margin="5" />
                    <Button Text="Cancel" 
                            Command="{Binding UpdateCancelCommand}"
                            Padding="20,10"
                            Margin="5" />
                </StackLayout>
            </StackLayout>

            <Button Text="Edit" 
                    Command="{Binding EditDepartmentCommand}" 
                    IsVisible="{Binding IsReadOnly}" 
                    Margin="0,10"
                    Padding="20,10"
                    HorizontalOptions="Fill" />

            <StackLayout BackgroundColor="Red" 
                         IsVisible="{Binding IsDeleteConfirmationVisible}"
                         Padding="15"
                         Margin="0,10"
                         Spacing="10">
                <Label Text="Do you want to delete employee?" 
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,5" />
                <StackLayout Orientation="Horizontal" 
                             Spacing="15"
                             HorizontalOptions="Center"
                             Margin="0,5">
                    <Button Text="Ok" 
                            Command="{Binding DeleteConfirmCommand}"
                            Padding="20,10"
                            Margin="5" />
                    <Button Text="Cancel" 
                            Command="{Binding DeleteCancelCommand}"
                            Padding="20,10"
                            Margin="5" />
                </StackLayout>
            </StackLayout>

            <Button x:Name="DeleteBtn"
                    Text="Delete"
                    HorizontalOptions="Fill"
                    TextColor="White"
                    Command="{Binding DeleteCommand}"
                    IsEnabled="{Binding IsDeleteEnabled}"
                    Margin="0,10"
                    Padding="20,10" />

            <Label Text="Employees" 
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,15,0,10"
                   HorizontalOptions="Start" />

            <CollectionView ItemsSource="{Binding Employees}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"
                            Margin="0,5">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal" 
                                     Spacing="15" 
                                     Padding="15,10"
                                     Margin="0,5">
                            <Label Text="{Binding FirstName}" 
                                   VerticalOptions="Center"
                                   FontSize="14" />
                            <Label Text="{Binding LastName}" 
                                   VerticalOptions="Center"
                                   FontSize="14" />
                            <Label Text="{Binding PhoneNumber}" 
                                   VerticalOptions="Center"
                                   FontSize="12"
                                   TextColor="Gray" />
                            <Label Text="{Binding Email}" 
                                   VerticalOptions="Center"
                                   FontSize="12"
                                   TextColor="Gray" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <!--<CollectionView.Behaviors>
                    <toolkit:EventToCommandBehavior
                        EventName="SelectionChanged"
                        Command="{Binding SelectEmployeeCommand}" />
                </CollectionView.Behaviors>-->
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>